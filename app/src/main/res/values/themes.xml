<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QuizGame.Normal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textTitleSize">@style/textTitleNormal</item>
        <item name="textBodySize">@style/textBodyNormal</item>
    </style>

    <style name="Theme.QuizGame.XL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textTitleSize">@style/textTitleXL</item>
        <item name="textBodySize">@style/textBodyXL</item>
    </style>

    <style name="textTitleNormal">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textBodyNormal">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="textTitleXL">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="textBodyXL">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BackgroundDesign">
        <item name="android:background">@drawable/background_color</item>
    </style>

</resources>